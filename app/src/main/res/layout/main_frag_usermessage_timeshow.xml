<?xml version="1.0" encoding="utf-8"?>
<com.chen.maptest.ComViews.MyTimeShow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="125dp"
    android:layout_height="120dp">

    <TextView
        android:id="@+id/show_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@color/colorTextGray"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/show1"
        android:layout_marginRight="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/show_day" />

    <TextView
        android:id="@+id/show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月"
        android:textColor="@color/colorTextGray"
        android:textSize="12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/show_month"
        app:layout_constraintRight_toLeftOf="@+id/show_day"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/show_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
        android:textColor="@color/colorTextGray"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/timebar"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/show_month"
        app:layout_constraintRight_toRightOf="@+id/show_day"
        app:layout_constraintTop_toBottomOf="@+id/show_month"
        app:srcCompat="@color/colorTextGray" />

    <TextView
        android:id="@+id/show_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016"
        android:textColor="@color/colorTextGray"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/show_month"
        app:layout_constraintBaseline_toBaselineOf="@+id/show_week"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/show_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期三"
        android:textColor="@color/colorTextGray"
        android:textSize="13dp"
        app:layout_constraintRight_toRightOf="@+id/show_day"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/timebar" />
</com.chen.maptest.ComViews.MyTimeShow>