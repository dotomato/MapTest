<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chen.maptest.MainActivity">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<com.amap.api.maps.MapView-->

        <FrameLayout
            android:id="@+id/upview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.chen.maptest.MapAdapter.MapAdapterLayout
                android:id="@+id/mapAdapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mapbox.mapboxsdk.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    mapbox:mapbox_styleUrl="mapbox://styles/mapbox/dark-v9"/>

            </com.chen.maptest.MapAdapter.MapAdapterLayout>


            <com.chen.maptest.MyView.MapUI
                android:id="@+id/mapui"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:src="#20FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:src="#20FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.chen.maptest.MyView.MapUI>

        </FrameLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/zoomview"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/zoomoutbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:materialIcon="arrow_expand_all"
                app:materialIconColor="@color/colorAccent"
                app:materialIconSize="40dp" />


            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_marginLeft="0dp"
                app:layout_constraintBottom_toTopOf="@+id/zoominbutton"
                app:layout_constraintLeft_toLeftOf="@+id/zoomoutbutton"
                app:layout_constraintRight_toRightOf="@+id/zoomoutbutton"
                app:layout_constraintTop_toBottomOf="@+id/zoomoutbutton">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/zoombar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:indeterminate="false"
                    android:progress="50"
                    android:progressBackgroundTint="#FF000000"
                    android:progressTint="#00000000"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>


            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/zoominbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintBottom_toTopOf="@+id/retlocalbutton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:materialIcon="arrow_compress_all"
                app:materialIconColor="@color/colorAccent"
                app:materialIconSize="40dp" />


            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/retlocalbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:materialIcon="crosshairs_gps"
                app:materialIconColor="@color/colorAccent"
                app:materialIconSize="40dp" />
        </android.support.constraint.ConstraintLayout>


        <com.chen.maptest.MyMapIcon
            android:id="@+id/mymapicon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/messageviewgroup"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/iconflag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingBottom="30dp"
                android:paddingLeft="30dp"
                android:scaleType="center"
                android:visibility="visible"

                app:materialIcon="feather"
                app:materialIconColor="@color/colorAccent"
                app:materialIconSize="40dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />



            <!--<net.steamcrafted.materialiconlib.MaterialIconView-->
                <!--android:id="@+id/iconarrow"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:paddingBottom="20dp"-->
                <!--android:scaleType="center"-->
                <!--android:visibility="visible"-->

                <!--app:materialIcon="arrow_down"-->
                <!--app:materialIconColor="@color/colorAccent"-->
                <!--app:materialIconSize="40dp"-->
                <!--tools:layout_editor_absoluteX="0dp"-->
                <!--tools:layout_editor_absoluteY="0dp" />-->

        </com.chen.maptest.MyMapIcon>



        <com.chen.maptest.MyView.FixRadioConstraintLayout
            android:id="@+id/messageviewgroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <com.chen.maptest.MyView.ScrollableViewPager
                android:id="@+id/viewpager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >


            </com.chen.maptest.MyView.ScrollableViewPager>


        </com.chen.maptest.MyView.FixRadioConstraintLayout>

        <com.chen.maptest.ScanView
            android:id="@+id/scanviewgroup"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <include
                android:id="@+id/emptylayout"
                layout="@layout/layout_empty_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="4dp" />

            <com.chen.maptest.ScanMessageRv
                android:id="@+id/scan_message_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

        </com.chen.maptest.ScanView>



        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/scanviewgroup"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:clickable="true"
                app:backgroundTint="@color/colorAccent"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_add_black_48dp2"
                />

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>


    <include
        layout="@layout/layout_left_drawer"
        android:id="@+id/leftDrawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"/>


</android.support.v4.widget.DrawerLayout>