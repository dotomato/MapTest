<?xml version="1.0" encoding="utf-8"?>
<com.chen.maptest.UserMessageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >

    <ImageView
        android:id="@+id/noblurimg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/messagelayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/locationbackground"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="#3000"
        app:layout_constraintBottom_toTopOf="@+id/messagelayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/locationdes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/locationbackground"
        app:layout_constraintRight_toRightOf="@+id/locationbackground"
        app:layout_constraintLeft_toLeftOf="@+id/locationbackground"
        app:layout_constraintTop_toTopOf="@+id/locationbackground"
        android:text="经度：56.32 纬度：54.15" />

    <com.chen.maptest.MyView.MyBlurImageView
        android:id="@+id/blurimg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/messagelayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/msgscroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/messagelayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.chen.maptest.MyView.EdittextSizeChangeEvent
            android:id="@+id/msgedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="你在这里的所闻、所想……"
            android:lineSpacingExtra="18dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:textColor="@android:color/white"
            android:textColorHint="#77FFFFFF"
            android:textSize="14dp" />

    </ScrollView>

    <include
        layout="@layout/layout_timeshow"
        android:id="@+id/timeshow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp"
        android:layout_height="100dp"
        android:layout_width="120dp" />

    <include
        layout="@layout/layout_inner_edge"
        android:id="@+id/inneredge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/messagelayout"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/messagelayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FFFFFFFF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.chen.maptest.MyView.RoundImageView
            android:id="@+id/usericon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:elevation="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/usericon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="周玲美"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/usericon"/>

        <TextView
            android:id="@+id/userdescript"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="中国南极科考站科学家"
            android:textColor="#FF444444"
            android:textSize="12dp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/usericon"
            app:layout_constraintRight_toRightOf="@+id/username"
            app:layout_constraintLeft_toLeftOf="@+id/username"/>

    </android.support.constraint.ConstraintLayout>


</com.chen.maptest.UserMessageLayout>